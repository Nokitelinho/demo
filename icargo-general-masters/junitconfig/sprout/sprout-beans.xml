<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="resolveActiveCompany" class="com.ibsplc.icargo.framework.floworchestration.context.CompanyResolverImpl" />

	<bean id="loggingInterceptor" class="com.ibsplc.icargo.framework.floworchestration.logging.LoggingAdviser" />

	<bean id="sproutExceptionTranslator" class="com.ibsplc.sprout.multitenant.exception.SproutExceptionTranslator">
		<property name="exceptionNamesToUnwrap">
			<list>
			   <value>com.ibsplc.xibase.server.framework.exceptions.BusinessException</value>
			   <value>com.ibsplc.xibase.server.framework.exceptions.SystemException</value>
			   <value>com.ibsplc.xibase.server.framework.persistence.OptimisticConcurrencyException</value>
			</list>
		</property>
	</bean>

	<bean id="ctxLstnr" class="com.ibsplc.sprout.context.SproutContext">
		<property name="contextType" value="SINGLE_CONTEXT" />
	</bean>

	<bean id="principalDetails"
		class="com.ibsplc.sprout.security.springsecurity.PrincipalDetailsImpl" />
<!--
	<bean id="configurableModules" class="com.ibsplc.sprout.config.SproutModules">
		<property name="auditEnabled" value="false" />
		<property name="acegiSecurityEnabled" value="false" />
	</bean>
	-->
</beans>