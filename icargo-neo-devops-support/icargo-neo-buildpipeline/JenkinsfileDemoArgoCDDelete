def Stage_Name="Init"
def ENV
def releaseVersion
def bom_env
def tenantId = "base"
def applicationId ="icargo-neo"
def currentVersion
def jiraIds
//env.EMAIL_SUBSCRIBERS=Sander.Joseph@ibsplc.com"

env.EMAIL_SUBSCRIBERS=""


pipeline {
    agent any

	options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '1'))
    }
	  parameters {
        text(defaultValue: "demo", description: '', name: 'releaseQuality')    
    }
    stages {			
		
		
		
		
		stage("Deploy Phase") {			
			steps {
				echo "Deploy Phase"
				sh '''
					argocd login k8s-argocd-argocdse-7d202af679-a2c010e40856d41b.elb.ap-south-1.amazonaws.com --username admin --password admin123 --insecure
					argocd app delete icargo-app --server k8s-argocd-argocdse-7d202af679-a2c010e40856d41b.elb.ap-south-1.amazonaws.com --cascade
				''' 
				
			}
		}
	
		
	}

	
	post {
		success{
			script {
				recipientProvidersForDEMODeploy= emailextrecipients([[$class: 'CulpritsRecipientProvider'],    
								[$class: 'RequesterRecipientProvider'],
								[$class: 'DevelopersRecipientProvider']])
				echo "recipientProvidersForDEMODeploy   ->  ${recipientProvidersForDEMODeploy}"     
				emailext( 
						recipientProviders: [[$class: 'CulpritsRecipientProvider'],
								[$class: 'RequesterRecipientProvider'],
								[$class: 'DevelopersRecipientProvider']],
						mimeType: 'text/html',
						to : "${env.EMAIL_SUBSCRIBERS}",
                        subject: "Success: Job '${env.JOB_NAME} [${env.RELVER}]'",
                        body: """Success: Job '${env.JOB_NAME} [${env.RELVER}]':
							<br />
							Check console output at:  ${env.BUILD_URL}/console 
							<br />
							Job Name:  ${env.JOB_NAME} 
                            Release Version: ${env.RELVER}
							<br />
							Jenkins Build Number: [${env.BUILD_NUMBER}]"""             
                    )      
            }
			
			
	}
	
        failure {
            script {
				recipientProvidersForDEMODeploy= emailextrecipients([[$class: 'CulpritsRecipientProvider'],   
								[$class: 'RequesterRecipientProvider'],
								[$class: 'DevelopersRecipientProvider']])
				echo "recipientProvidersForDEMODeploy   ->  ${recipientProvidersForDEMODeploy}"			
				emailext(
						mimeType: 'text/html',
						recipientProviders: [[$class: 'CulpritsRecipientProvider'],
										[$class: 'RequesterRecipientProvider'],
										[$class: 'DevelopersRecipientProvider']],
						to : "${env.EMAIL_SUBSCRIBERS}",
						subject: "FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
						body: """
								<div style="color:red;font-size:20px">
								FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':
								</div>
								Failure happened in ${Stage_Name}.
								<br />
								Check console output at:  ${env.BUILD_URL}/console
								<br />
								Job Name:  ${env.JOB_NAME} 
								<br />
								Build Number: [${env.BUILD_NUMBER}]"""
						)				
            }
        }
    }

}
