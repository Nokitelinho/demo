         <version>${neo.framework.version}</version>
      </dependency>
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
         <artifactId>neo-framework-core</artifactId>
         <version>${neo.framework.version}</version>
      </dependency>
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
         <artifactId>neo-icargo-compat</artifactId>
         <version>${neo.framework.version}</version>
      </dependency>
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
         <artifactId>neo-common</artifactId>
         <scope>compile</scope>
      </dependency>
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
         <artifactId>neo-masters-client</artifactId>
         <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
         <artifactId>neo-framework-jpa</artifactId>
         <version>2.0.2-SNAPSHOT</version>
      </dependency>
      <!--stubs-->
      <dependency>
         <groupId>com.ibsplc.neoicargo</groupId>
